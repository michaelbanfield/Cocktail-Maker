<h1>Add Drink</h1>

<div class="row">
    <div class="span6 offset3">
        <%= form_for(@drink) do |f| %>

            <%= f.label :name, "Drink Name" %>
            <%= f.text_field :name %>

            <%= f.label :video_id, "Youtube ID" %>

            <%= f.text_field :video_id %>
            <div class="alert alert-info">
                Youtube ID is: <br>  <small>http://www.youtube.com/watch?v=</small><strong>this_bit</strong>
            </div>
            <input  type="submit"  value="    Add Drink     " class="button glow button-rounded button-flat-action"/>
        <% end %>
    </div>
</div>